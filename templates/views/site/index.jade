extends ../../layouts/default

include ../../mixins/post
include ../../mixins/advertisement

block content
	//- Hero
	section.section.home-meetup
		.container
			h1 Legalize Oklahoma<br>
			h3 Now's our chance to end the war on the people.
			p.lead <strong>The people</strong> have changed their mind. Every day more and more <strong>support legalization of marijuana</strong>.
			p.lead Together we can change the state law through the petition initiative process. It's time to stand up against the out of touch legislature and legalize marijuana.


	//- About
	section.section.home-about: .container
		h2 Still not sure? Read our statements about marijuana and learn more.
		p
			a(href='/blog') Learn more about Legalization
			|  &nbsp;&middot;&nbsp; 
			a(href='/members') See everyday Oklahomans who support it
			br
		h2
			br
			| Ready to help? Join us and come volunteer to get it legalized in Oklahoma.
		h2
			a(href='/join') Join Us

	section.section.home-meetup

		.home-meetup-wrapper
			.container
				h5= (lastMeetup) ? 'Our last meetup:' : 'Our next meetup:'
				div(data-ks-editable=editable(user, { list: 'Meetup', id: nextMeetup.id }))
					h1= nextMeetup.name
					.row
						.col-sm-8
							if nextMeetup.description
								p!= nextMeetup.description
							if nextMeetup.talks	
								if nextMeetup.talks.length
									.meetup-talks
										span.meetup-talks__icon.entypo.entypo-large.entypo-comment
										h4.meetup-talks__heading Activities at the event
										ul.list-unstyled
											each talk in nextMeetup.talks
												li.talk
													strong.talk__name #{talk.name} 
													if talk.who.length
														.talk__speaker
															| with 
															each user, i in talk.who
																if i
																	| , 
																= user.name.full + ' '
																if user.twitter
																	a(href='http://twitter.com/' + user.twitter.replace('@', ''), target='_blank' data-size="large")= user.twitter + ' '
						.col-sm-4
							dl.dl-horizontal.home-meetup__details-list
								dt
									.sr-only Date
									span.entypo.entypo-fixed-width.entypo-calendar
								dd=nextMeetup._.date.format('dddd, DD MMM YYYY')
								dt
									.sr-only Time
									span.entypo.entypo-fixed-width.entypo-clock
								dd=nextMeetup.time
								dt
									.sr-only Place
									span.entypo.entypo-fixed-width.entypo-location
								dd=nextMeetup.place
							if !lastMeetup
								.register-btn
									a(href='/attend', disabled=!nextMeetup.rsvpsAvailable).btn.btn-lg.btn-block.btn-register= nextMeetup.rsvpsAvailable ? 'Register' : 'Sold out!'
							hr.line-dashed
							p: a(href='/meetups').text-muted All our meetups &rarr;

		.home-meetup-map
			#meetup-map.map
			a(href='https://maps.google.com.au/?daddr=' + nextMeetup.place, target='_blank').directions-button
				span.entypo.entypo-popup
				|  Get Directions


	//- Blog
	if posts.length
		section.section.home-blog: .container
			.blog(itemscope itemtype="http://schema.org/Blog")
				for post in posts
					+post(post)
				hr.line-dashed
				p(data-ks-editable=editable(user, { list: 'Post' }))
					a(href='/blog', itemprop='url').text-muted See all SydJS blog posts &rarr;



	//- Links
	section.section.home-links: .container
		.row
			.col-sm-4
				a(href='/members/organisations').link-icon-badge: span.link-icon.entypo.entypo-globe
				h2.home-links__heading: a(href='/members/organisations') Organisations
				p Take a look at which local businesses and community leaders have already jumped on board the freedom train!
				p It's the savy business owner or political who is seen by their as on the right side of history, supporting liberty in Oklahoma.

			.col-sm-4
				a(href='/members').link-icon-badge: span.link-icon.entypo.entypo-users
				h2.home-links__heading: a(href='/members') Members
				p Volunteers will be sectioned off depending on which particular tasks need to be accomplishe at a given time but nonethelss according to It/Media development, Canvassers/Doorknockers, and drivers for car pools.
				p Right now the best thing that any volunteer can be doing is if you are OKC, help gather those signatures, if you are in tulsa, help us spread the word and get people registered to vote, we have thousands of voter registration cards to hand out.

			.col-sm-4
				a(href='/links').link-icon-badge: span.link-icon.entypo.entypo-link
				h2.home-links__heading: a(href='/links') Links
				p If you are interested in some additional information regarding the medical benefits of cannabis here are some a(href='/links') Links
				p Or if you are interested about the impact the current policy of marijuana prohibition has on Oklahoma communities

		.row
			.col-sm-4
				p: a(href='/members/organisations', class='home-links-anchor') View organisations

			.col-sm-4
				p: a(href='/members', class='home-links-anchor') View members

			.col-sm-4
				p: a(href='/links', class='home-links-anchor') View links


