extends ../../layouts/default

include ../../mixins/organisation

block intro
	.page-intro: .container
		h1 Organisations
		p The organisations, businesses, and churches that support legalization.
		.buttons
			if !user
				a(href='/join').btn.btn-primary Join Us
			a(href='/members').btn.btn-default View Members

block content
	.container
		.organisations
			if organisations.length
				each org, i in organisations
					if i
						hr
					+organisations(org)
			else
				h3.text-muted There are no organisations yet.
